rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 인증 확인
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // 자신의 데이터인지 확인
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // 사용자 문서
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // 페르소나 문서 (모든 인증된 사용자 읽기 가능)
    match /personas/{personaId} {
      allow read: if isAuthenticated();
      allow write: if false; // 관리자만 쓰기 가능
    }
    
    // 사용자-페르소나 관계
    match /user_persona_relationships/{relationshipId} {
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
        resource.data.userId == request.auth.uid &&
        request.resource.data.userId == request.auth.uid;
      allow delete: if false; // 삭제 금지
    }
    
    // 채팅 메시지
    match /users/{userId}/chats/{personaId}/messages/{messageId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if false; // 메시지 수정 금지
      allow delete: if false; // 메시지 삭제 금지
    }
    
    // 마일스톤 이력
    match /milestone_history/{historyId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update: if false; // 이력 수정 금지
      allow delete: if false; // 이력 삭제 금지
    }
    
    // 이별 이력
    match /breakup_history/{historyId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update: if false; // 이력 수정 금지
      allow delete: if false; // 이력 삭제 금지
    }
    
    // 매칭된 페르소나
    match /matched_personas/{userId}/personas/{personaId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // 대화 메모리
    match /conversation_memories/{memoryId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow write: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // 구독 정보
    match /subscriptions/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
  }
}