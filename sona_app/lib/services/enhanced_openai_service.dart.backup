    }
    
    return keywords;
  }
  
  /// ğŸ” ì—ì½”ì‰(ë”°ë¼í•˜ê¸°) íŒ¨í„´ ê°ì§€
  static bool _isEchoing(String response, String userMessage) {
    final userWords = userMessage.split(' ');
